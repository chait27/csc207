<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="v1.trial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ASCII_Login">
        <activity
            android:name=".BrowseWalletsActivity"
            android:exported="false"
            android:label="@string/title_activity_browse_wallets"
            android:theme="@style/Theme.ASCII_Login.NoActionBar" />
        <activity
            android:name=".CreateWalletActivity"
            android:exported="false"
            android:label="@string/title_activity_create_wallet"
            android:theme="@style/Theme.ASCII_Login.NoActionBar" />
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true"
            android:label="@string/activity_login"
            android:theme="@style/Theme.ASCII_Login.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainMenuAdminActivity" />
        <activity android:name=".Activity.MainMenuBasicActivity" />
        <activity android:name=".Activity.MarketActivity" />
        <activity android:name=".Activity.ProfileActivity" />
        <activity android:name=".Activity.PersonalWalletActivity" />
        <activity android:name=".Activity.AdminActivity" />
    </application>

</manifest>