<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="v1.trial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ASCII_Login">
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SetupActivity"
            android:exported="true"
            android:label="@string/activity_login"
            android:theme="@style/Theme.ASCII_Login.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainMenuAdminActivity"></activity>
        <activity android:name=".Activity.MainMenuBasicActivity"></activity>
        <activity android:name=".Activity.MarketActivity"></activity>
        <activity android:name=".Activity.ProfileActivity"></activity>
        <activity android:name=".Activity.PersonalWalletActivity"></activity>
        <activity android:name=".Activity.AdminActivity"></activity>
        <activity
            android:name=".Activity.CreateWalletActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.RUN"></action>
            </intent-filter>
        </activity>
        <activity android:name=".Activity.BrowseWalletsActivity"></activity>
    </application>

</manifest>